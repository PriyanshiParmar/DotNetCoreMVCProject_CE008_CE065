@model HospitalManagementSystem.Models.PrescriptionMedicine

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>PrescriptionMedicine</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-route-prescriptionId="@Model.PrescriptionId" asp-route-medId="@Model.medicineId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="medicineId" />
            <div class="form-group">
                <label asp-for="dose" class="control-label"></label>
                <input asp-for="dose" class="form-control" />
                <span asp-validation-for="dose" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="noOfTablets" class="control-label"></label>
                <input asp-for="noOfTablets" class="form-control" />
                <span asp-validation-for="noOfTablets" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="PrescriptionId" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
